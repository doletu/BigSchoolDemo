
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Site.css" rel="stylesheet" />

}



<h2>Mine</h2>


    <ul class="course">
        @foreach (var item in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @item.DateTime.ToString("MM")


                    </div>
                    <div class="day">
                        @item.DateTime.ToString("dd")

                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @item.Lecturer.Name
                      
                    </span>
                    <span class="category">
                        @item.Category.Name
                    </span>
                
                </div>

                <div class="action">
                    <a href="@Url.Action("Edit","Course",new { Id=item.Id})">Edit</a>||



                    <a href="#" class="js-cancel-course" data-course-id="@item.Id">Delete</a>
                </div>

            </li>

        }

    </ul>







@section  scripts
{

    <script>

        $(document).ready(function () {
            $(".js-cancel-course").click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm("Are you sure to cancel?",
                    function () {
                        $.ajax({
                            url: "/api/courses/" + link.attr("data-course-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                link.parents("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            })

                            .fail(function () {
                                alert("Something Failed");
                            });
                    });
            });
        });
                
    </script>
}
